<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:background="@drawable/default_radius_20"
    android:backgroundTint="@color/white"

    android:elevation="10dp"

    android:layout_marginBottom="10dp"
    android:layout_marginHorizontal="12dp"
    android:paddingVertical="16dp"
    android:paddingHorizontal="32dp"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_commentListItem_profileImg"
        android:layout_width="32dp"
        android:layout_height="32dp"

        android:src="@drawable/default_profile_img"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/txt_commentListItem_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="ckstmznf"
        android:fontFamily="@font/roboto_black"

        android:layout_marginStart="12dp"

        app:layout_constraintTop_toTopOf="@+id/img_commentListItem_profileImg"
        app:layout_constraintBottom_toBottomOf="@+id/img_commentListItem_profileImg"
        app:layout_constraintStart_toEndOf="@+id/img_commentListItem_profileImg"
        />
    <TextView
        android:id="@+id/txt_commentListItem_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="3일전"

        app:layout_constraintTop_toTopOf="@+id/img_commentListItem_profileImg"
        app:layout_constraintBottom_toBottomOf="@+id/img_commentListItem_profileImg"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/txt_commentListItem_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:text="맞아 EDCAN은 최고야 맞아 EDCAN은 최고야 맞아 EDCAN은 최고야 맞아 EDCAN은 최고야 맞아 EDCAN은 최고야 맞아 EDCAN은 최고야 "

        app:layout_constraintTop_toBottomOf="@+id/img_commentListItem_profileImg"
        app:layout_constraintStart_toEndOf="@id/img_commentListItem_profileImg"
        app:layout_constraintEnd_toStartOf="@id/txt_commentListItem_date"
        />

</androidx.constraintlayout.widget.ConstraintLayout>